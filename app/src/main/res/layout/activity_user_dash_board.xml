<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashBoard.UserDashBoardActivity">

    <TextView
        android:id="@+id/tvName"
        android:text="Name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/etName"
        android:hint="Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvAddress"
        android:text="Address:"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/etAddress"
        android:hint="Geruwa-02, Bardiya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:text="Contact Number:"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/etPhoneNumber"
        android:hint="9868768604"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
/>
    <TextView
        android:id="@+id/tvAge"
        android:text="Age:"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />  >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="25"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textStyle="bold"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Male"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Female"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbOthers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Others"
            android:layout_height="wrap_content"/>
    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        android:textStyle="bold"
        ></TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbNormal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Normal"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbMildFever"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Mild Fever"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbHighFever"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="HighFever"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fatigue:"
        android:textStyle="bold"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Normal"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Mild Fever"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shortness of breathe:"
        android:textStyle="bold"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbShortYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Normal"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbShortNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Mild Fever"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body Pain:"
        android:textStyle="bold"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbPainYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Normal"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbPainNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Mild Fever"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diarrhoea"
        android:textStyle="bold"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbDihYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Yes"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbDihNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="No"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runny Nose:"
        android:textStyle="bold"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbRunnyYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Yes"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbRunnyNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="No"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nausea:"
        android:textStyle="bold"
        ></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbNauseaYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Yes"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbNauseaNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="No"
            android:layout_height="wrap_content"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Did you recently returnf from any covid risk location or are you  risiding on covid risk zone?"
        android:textStyle="bold"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbQuestionYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Yes"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbQuestionNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="No"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SubmitForm"
        android:textStyle="bold" />

</LinearLayout>
    </ScrollView>